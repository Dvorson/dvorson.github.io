---
import Layout from '../../layouts/Layout.astro';
import TechStack from '../../components/TechStack.astro';
import CTABanner from '../../components/CTABanner.astro';
import services from '../../data/services.json';

export function getStaticPaths() {
  return services.caseStudies
    .filter(cs => cs.hasFullPage)
    .map((cs) => ({
      params: { slug: cs.slug },
      props: { caseStudy: cs }
    }));
}

const { caseStudy } = Astro.props;
const { iconPaths, solutions } = services;

// Find related solutions
const relatedSolutions = solutions.filter(s =>
  s.relatedCaseStudies.includes(caseStudy.id)
);
---

<Layout
  title={`${caseStudy.title} | Case Study — Anton Dvorson`}
  description={`Case study: ${caseStudy.challenge.slice(0, 150)}...`}
  ogImage={`/og/cs-${caseStudy.slug}.png`}
  url={`https://dvorson.github.io/case-studies/${caseStudy.slug}`}
  canonical={`https://dvorson.github.io/case-studies/${caseStudy.slug}`}
>
  <!-- Header -->
  <section class="mb-12">
    <a href="/case-studies" class="inline-flex items-center text-sm text-gray-400 hover:text-gray-600 font-medium transition-colors mb-6">
      <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
      </svg>
      All case studies
    </a>

    <div class="flex items-center gap-3 mb-4">
      <span class="inline-block px-3 py-1 bg-blue-50 text-blue-700 text-xs font-semibold rounded-full">
        {caseStudy.domain}
      </span>
      <span class="text-sm text-gray-400">{caseStudy.duration}</span>
    </div>

    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-3 tracking-tight">
      {caseStudy.title}
    </h1>
    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
      <span><strong class="text-gray-700">Client:</strong> {caseStudy.client}</span>
      <span><strong class="text-gray-700">Role:</strong> {caseStudy.role}</span>
    </div>
  </section>

  <!-- The Challenge -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
      <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
        <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.832c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      </div>
      The Challenge
    </h2>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-gray-700 leading-relaxed">{caseStudy.challenge}</p>
    </div>
  </section>

  <!-- The Approach -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
      </div>
      The Approach
    </h2>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-gray-700 leading-relaxed">{caseStudy.approach}</p>
    </div>
  </section>

  <!-- The Outcome -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
      <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      The Outcome
    </h2>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="space-y-3">
        {caseStudy.outcomes.map((outcome) => (
          <div class="flex items-start gap-3">
            <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <p class="text-gray-700 leading-relaxed">{outcome}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technologies -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Technologies</h2>
    <TechStack technologies={caseStudy.technologies} />
  </section>

  <!-- Related Solutions -->
  {relatedSolutions.length > 0 && (
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Related solutions</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {relatedSolutions.map(s => (
          <a href={`/solutions/${s.slug}`} class="group block bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md hover:border-blue-200 transition-all duration-200">
            <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors mb-1">{s.title}</h3>
            <p class="text-sm text-gray-600">{s.subheadline.slice(0, 120)}...</p>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- CTA -->
  <CTABanner
    headline="Facing a similar challenge?"
    description="Let's talk about how I can help your team get the same kind of results. 30 minutes, no pitch — just an honest conversation about your situation."
    ctaText="Let's Talk on LinkedIn"
  />
</Layout>
