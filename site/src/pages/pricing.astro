---
import Layout from '../layouts/Layout.astro';
import FAQSection from '../components/FAQSection.astro';
import CTABanner from '../components/CTABanner.astro';
import services from '../data/services.json';

const { pricing } = services;

const pricingFaqs = [
  { question: "What's included in the initial discovery call?", answer: "A 30-minute conversation where I listen to your challenge, ask questions about your current situation, and give you an honest assessment of whether I can help. No sales pitch, no obligation. If there's a fit, I'll follow up with a concrete proposal." },
  { question: "How do you handle payment?", answer: "Invoiced monthly or by milestone, depending on the engagement type. I'm based in the Netherlands and invoice in EUR. Payment terms are Net 30." },
  { question: "Can I start with Advisory and then move to Implementation?", answer: "Absolutely — that's a common path. Many clients start with an Advisory engagement to validate the approach, then move to Implementation once they have clarity and confidence." },
  { question: "What if the project scope changes mid-engagement?", answer: "It happens. I handle scope changes transparently: we discuss the impact on timeline and budget, agree on the adjusted scope in writing, and move forward. No surprise invoices." },
  { question: "Do you work with agencies or only direct clients?", answer: "Both. I regularly work through agencies like EPAM Systems as well as directly with end clients. The engagement model adapts to your procurement process." }
];
---

<Layout
  title="Pricing | Transparent AI Consulting Rates — Anton Dvorson"
  description="No surprises. Transparent pricing for AI consulting: advisory engagements from EUR 2,500, implementation projects from EUR 15,000, fractional embedded from EUR 8,000/month."
  ogImage="/og/pricing.png"
  url="https://dvorson.github.io/pricing"
  canonical="https://dvorson.github.io/pricing"
>
  <!-- Hero -->
  <section class="mb-12">
    <div class="section-header">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">No surprises. Here's how I work and what it costs.</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed">Transparent pricing, clear scope, fixed deliverables. You know exactly what you're getting before we start.</p>
    </div>
  </section>

  <!-- How I Work -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold text-gray-900 mb-8">How every engagement works</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      {pricing.processSteps.map((step, i) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 relative">
          <div class="w-10 h-10 bg-blue-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4">
            {i + 1}
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">{step.name}</h3>
          <p class="text-sm text-gray-600 leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Pricing Tiers -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Engagement models</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {pricing.tiers.map((tier, i) => (
        <div class={`bg-white rounded-xl p-8 shadow-sm border ${i === 1 ? 'border-blue-200 ring-2 ring-blue-100' : 'border-gray-100'} flex flex-col`}>
          {i === 1 && (
            <span class="inline-block px-3 py-1 bg-blue-600 text-white text-xs font-semibold rounded-full mb-4 self-start">Most common</span>
          )}
          <h3 class="text-xl font-bold text-gray-900 mb-1">{tier.name}</h3>
          <p class="text-sm text-gray-500 mb-4">{tier.tagline}</p>

          <div class="mb-4">
            <p class="text-2xl font-bold text-blue-600">{tier.range}</p>
            <p class="text-sm text-gray-500">{tier.unit}</p>
          </div>

          <p class="text-sm text-gray-400 mb-4">{tier.duration}</p>

          <p class="text-sm text-gray-600 mb-6 leading-relaxed">{tier.description}</p>

          <div class="border-t border-gray-100 pt-4 mt-auto">
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Includes</p>
            <ul class="space-y-2">
              {tier.includes.map((item) => (
                <li class="flex items-start gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    <p class="text-sm text-gray-400 text-center mt-6">{pricing.note}</p>
  </section>

  <!-- FAQ -->
  <section class="mb-16">
    <div class="section-header">
      <h2>Common questions about working together</h2>
    </div>
    <FAQSection faqs={pricingFaqs} />
  </section>

  <!-- CTA -->
  <CTABanner
    headline="Let's talk about your project"
    description="30 minutes, no obligation. I'll listen to your challenge and give you an honest assessment of how I can help — and what it'll cost."
    ctaText="Let's Talk on LinkedIn"
  />
</Layout>
