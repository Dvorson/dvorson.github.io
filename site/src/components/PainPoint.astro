---
export interface Props {
  text: string;
  index?: number;
}

const { text, index } = Astro.props;
---

<div class="flex items-start gap-4 bg-red-50/60 border border-red-100 rounded-xl px-5 py-4">
  <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
    <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.832c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z" />
    </svg>
  </div>
  <p class="text-gray-700 leading-relaxed">{text}</p>
</div>
