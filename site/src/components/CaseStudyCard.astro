---
export interface Props {
  caseStudy: {
    slug: string;
    title: string;
    domain: string;
    client: string;
    outcomes: string[];
    technologies: string[];
    icon: string;
    iconPath: string;
    hasFullPage: boolean;
  };
}

const { caseStudy } = Astro.props;
const keyOutcome = caseStudy.outcomes[0] || '';
---

<div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-200 border border-gray-100 h-full flex flex-col">
  <div class="flex items-start justify-between mb-4">
    <span class="inline-block px-3 py-1 bg-blue-50 text-blue-700 text-xs font-semibold rounded-full">
      {caseStudy.domain}
    </span>
    <div class="w-10 h-10 bg-gray-50 rounded-lg flex items-center justify-center flex-shrink-0 ml-3">
      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={caseStudy.iconPath} />
      </svg>
    </div>
  </div>

  <h3 class="text-lg font-bold text-gray-900 mb-1">
    {caseStudy.title}
  </h3>

  <p class="text-sm text-gray-500 mb-3">
    {caseStudy.client}
  </p>

  {keyOutcome && (
    <div class="bg-green-50 border border-green-100 rounded-lg px-4 py-3 mb-4">
      <p class="text-sm text-green-800 font-medium">{keyOutcome}</p>
    </div>
  )}

  <div class="flex flex-wrap gap-1.5 mb-4 flex-grow">
    {caseStudy.technologies.map((tech) => (
      <span class="px-2.5 py-1 bg-gray-50 text-gray-600 text-xs rounded-md border border-gray-100">
        {tech}
      </span>
    ))}
  </div>

  {caseStudy.hasFullPage && (
    <a
      href={`/case-studies/${caseStudy.slug}`}
      class="text-blue-600 text-sm font-semibold inline-flex items-center hover:text-blue-700 transition-colors mt-auto"
    >
      Read case study
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  )}
</div>
