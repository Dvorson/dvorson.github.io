{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "test": "deno test -A --coverage=coverage tests/",
    "coverage": "deno coverage coverage",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "$fresh/runtime.ts": "https://deno.land/x/fresh@1.7.3/runtime.ts",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "preact/hooks": "https://esm.sh/preact@10.22.0/hooks",
    "preact/compat": "https://esm.sh/preact@10.19.4/compat",
    "react": "https://esm.sh/preact@10.19.4/compat",
    "react-dom": "https://esm.sh/preact@10.19.4/compat",
    "react/jsx-runtime": "https://esm.sh/preact@10.19.4/jsx-runtime",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.3.1?deps=preact@10.19.4",
    "@tiptap/core": "npm:@tiptap/core@2.3.0",
    "@tiptap/react": "https://esm.sh/@tiptap/react@2.3.0?alias=react:preact/compat,react-dom:preact/compat,react/jsx-runtime:preact/jsx-runtime&deps=preact@10.19.4",
    "@tiptap/starter-kit": "https://esm.sh/@tiptap/starter-kit@2.3.0",
    "@tiptap/extension-table": "https://esm.sh/@tiptap/extension-table@2.3.0",
    "@tiptap/extension-table-row": "https://esm.sh/@tiptap/extension-table-row@2.3.0",
    "@tiptap/extension-table-cell": "https://esm.sh/@tiptap/extension-table-cell@2.3.0",
    "@tiptap/extension-table-header": "https://esm.sh/@tiptap/extension-table-header@2.3.0",
    "@tiptap/extension-placeholder": "https://esm.sh/@tiptap/extension-placeholder@2.3.0",
    "@tiptap/extension-image": "https://esm.sh/@tiptap/extension-image@2.3.0",
    "@tiptap/suggestion": "https://esm.sh/@tiptap/suggestion@2.3.0",
    "tiptap-extension-global-drag-handle": "npm:tiptap-extension-global-drag-handle",
    "tippy.js": "https://esm.sh/tippy.js@6.3.7",
    "std/": "https://deno.land/std@0.200.0/",
    "testing/": "https://deno.land/std@0.200.0/testing/",
    "preact-testing-library": "https://esm.sh/@testing-library/preact@3.2.3",
    "happy-dom": "https://esm.sh/happy-dom@12.10.3",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@0.5.10",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"]
}
